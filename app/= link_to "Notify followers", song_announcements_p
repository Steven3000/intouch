= link_to "Notify followers", song_announcements_path(:method => :post, id: song.id)



class SongAnnouncementController

  def create
    @song = Song.find(params[:id])

    @song.artist.subscriptions.each do |sub|
      AnnouncementMailer.announce_song(sub.user, @song)
    end
  end

class AlbumAnnouncementController

  def create
    @album = Album.find(params[:id])

    @album.artist.subscriptions.each do |sub|
      AnnouncementMailer.announce_album(sub.user, @album)
    end
  end
