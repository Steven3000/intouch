<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "intouch" %></title>
    <%= csrf_meta_tags %>
    <meta name="author" content="Steven Callen aka Mulatto Patriot">



        <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->


    <%= stylesheet_link_tag "admin_layout", media: "all" %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

    <%= yield(:page_stylesheet) if content_for?(:page_stylesheet) %>

</head>

<body class="header-fixed">
    <style type="text/css">
        body {
            background-color: rgb(255, 218, 185);
        }
    </style>

<div class="wrapper">
    <!--=== Header ===-->
    <div class="header-v6 header-dark-transparent header-sticky">
        <div class="container">
            <!-- Logo -->
            <li class="btn btn-lg headnav_mp">
                <%= link_to_if (request.path != "/home.html"),
                          "NtouchMusic.com",
                          "/home.html" %>
            </li>


            <!-- End Logo -->

            <!-- Topbar -->
            <ul class="loginbar pull-right">
                    <li class="btn btn-lg headnav_mp">
                         <%= link_to_if (request.path != "/home.html"),
                          "Home",
                          root_path %>
                    </li>
                    <li class="btn btn-lg headnav_mp">
                    <%= link_to_if (request.path != subscriptions_path),
                         "My Subscriptions",
                         subscriptions_path %>
                    </li>
                    <li class="btn btn-lg headnav_mp">
                        <%= link_to_if (request.path != songs_path),
                           "Songs",
                           "/songs" %>
                    </li>
                    <li class="btn btn-lg headnav_mp">
                        <%= link_to_if (request.path != albums_path),
                           "Albums",
                           "/albums" %>
                    </li>
                    <% if user_signed_in? %>
                        <li class="btn btn-lg headnav_mp"><%= link_to current_user.email, edit_user_registration_path %></li>
                        <li class="btn btn-lg headnav_mp"><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></li>
                    <% else %>
                        <li class="btn btn-success btn-lg headnav_mp"><%= link_to "Sign Up", new_user_registration_path %></li>
                        <li class="btn btn-lg headnav_mp"><%= link_to "Sign In", new_user_session_path %></li>
                    <% end %>

                </ul>
            <!-- End Topbar -->
    </br>
    </br>

    <%= yield %>

    </br>

 <!--=== Footer v6 ===-->
    <div id="footer-v6" class="footer-v6">

        <div class="copyright">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 sm-margon-bottom-10">
                        <ul class="list-inline terms-menu" style="text-align:center">
                            <li><a class="silver btn btn-primary" style="color:white;" href="#">About Us</a></li>
                            <li><a class="silver btn btn-primary" style="color:white;" href="mailto:contact.ntouchmusic@gmail.com">Got a Question or feedback? EMAIL US</a></li>
                            <li><a class="silver btn btn-primary" style="color:white;" target="_blank" href="http://www.mptracks.com">Mulatto Patriot - MPtracks.com</a></li>
                              <li class="silver btn btn-danger">
                        <%= link_to_if (request.path != "/admin_dashboard.html"),
                         "admin_only",
                         "/admin_dashboard.html" %>
                        </li>
                        </ul>
                    </div>
                    </br>
                    </br>
                    </br>
                    </br>

                    <ul class="list-inline dark-social space-bottom-0" style="text-align:center;">
                        <li>
                            <a data-placement="top" target="blank" data-toggle="tooltip" class="tooltips" data-original-title="Twitter" href="http://www.twitter.com/ntouchmusicapp">
                                <%#= icon('flag', 'Font Awesome', id: 'my-icon', class: 'strong') %>
                                <%= icon('twitter-square fa-3x') %>
                            </a>
                        </li>
                        <li>
                            <a data-placement="top" target="blank" data-toggle="tooltip" class="tooltips" data-original-title="Pinterest" href="https://www.pinterest.com/ntouchmusicapp/">
                                <%= icon('pinterest-square fa-3x') %>
                            </a>
                        </li>
                        <li>
                            <a data-placement="top" target="blank" data-toggle="tooltip" class="tooltips" data-original-title="Youtube" href="https://www.youtube.com/channel/UCURuRdMfuURj4-9qSwTTIbg">
                                <%= icon('youtube-square fa-3x') %>
                            </a>
                        </li>
                    </ul>
                     </br>
                    <p style="text-align:center">©  2015 Mulatto Patriot Productions®. All rights reserved.</p>


                    </div>
                </div>
            </div>
        </div>

    </div>

    <!--=== End Footer v6 ===-->

        </div>

    </div><!--/wrapper-->
</div>

</body>



