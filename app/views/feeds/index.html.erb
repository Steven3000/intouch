<div class="page-header">
  <h1>Feeds</h1>
</div>

<p><a href="/feeds/new" class="btn btn-primary">Add a New Feed</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Artist</th>
      <th>Song</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @feeds.each do |feed| %>
      <tr>
        <td><%= feed.artist %></td>
        <td><%= feed.song %></td>
        <td>
          <a href="/feeds/<%= feed.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/feeds/<%= feed.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_feed/<%= feed.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

