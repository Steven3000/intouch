<div class="page-header">
  <h1>Add Feed</h1>
</div>

<% if @feed.errors.any? %>
  <% @feed.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<form action="/create_feed" class="form-horizontal">
  <!-- Label and input for artist -->
  <div class="form-group">
    <label for="artist" class="col-sm-2 control-label">
      Artist
    </label>
    <div class="col-sm-10">
      <input type="text" id="artist" name="artist" placeholder="Artist" class="form-control" value="<%= @feed.artist %>">
    </div>
  </div>

  <!-- Label and input for song -->
  <div class="form-group">
    <label for="song" class="col-sm-2 control-label">
      Song
    </label>
    <div class="col-sm-10">
      <input type="text" id="song" name="song" placeholder="Song" class="form-control" value="<%= @feed.song %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Feed" class="btn btn-primary">
    </div>
  </div>
</form>
