<div class="container">
  <div style="display:inline-block; float:left;">
    <div class="btn-lg button-bar-album-show navv-font">
      <a href="/artists/<%= @album.artist.id %>"><%= @album.artist.name %></a>
    </div>
    <p class="button-bar-album-show navv-font"><%= @album.name %></p>

    <% if @album.itunes.present? %>
    <a href="<%= @album.itunes %>" target="_blank" class="btn button-bar-album-show navv-font">iTunes</a>
    <% end %>

    <% if @album.google.present? %>
    <a href="<%= @album.google %>" target="_blank" class="btn button-bar-album-show navv-font">Google Play</a>
    <% end %>

    <% if @album.amazon.present? %>
    <a href="<%= @album.amazon %>" target="_blank" class="btn button-bar-album-show navv-font">Amazon</a>
    <% end %>

    <% if @album.spotify.present? %>
    <a href="<%= @album.spotify %>" target="_blank" class="btn button-bar-album-show navv-font">Spotify</a>
    <% end %>
  </div>
  <div style="display:inline-block;  float:right;">
    <%= image_tag "#{@album.cover.url}", :class => "img-responsive pic-w2" %>

    <% if @album.back.present? %>

    <%= image_tag "#{@album.back.url}", :class => "img-responsive pic-w2" %>
    <% else %>
    <% end %>
  </div>
</div>
