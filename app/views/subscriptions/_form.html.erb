<div>
  <%= form_for(@subscription, html: {class: 'form-horizontal'}) do |f| %>

    <% if @subscription.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@subscription.errors.count, "error") %> prohibited this subscription from being saved:</h2>

        <ul>
        <% @subscription.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>


    <div>
      <%= f.hidden_field :user_id %>
      <%= hidden_field_tag 'selected', 'none'  %>
    </div>

    <div class="form-group">
      <%= f.label :artist_id, class: "control-label" %>
    </div>
    <div class="col-sm-6">
      <%= f.collection_select(:artist_id, Artist.all, :id, :name) %>
    </div>
    <div class="form-group">
    <div class="col-sm-4">
        <%= f.submit "Add Subscription", :class => "btn btn-primary btn-block" %>
      </div>
    </div>
  <% end %>
</div>
