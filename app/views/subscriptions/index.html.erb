<div class="container">
  <% if notice.present? %>
  <p id="notice" class="button-bar"><%= notice %></p>
  <% end %>
  <% if current_user.subscriptions.present? %>
  <h1 class="button-bar"><%= current_user.username.capitalize %>'s Subscriptions <em>(Click on images for Artist Profile)</em></h1>
  <% end %>
  <%= render 'my_subs' %>
</div>

<div class="container">
  <h1 class="button-bar">Click on "Create Subscription" to follow any Artist</h1>
<!--   <a class="button-main-feedc" href="mailto:contact.ntouchmusic@gmail.com">Your FAVORITE ARTIST not listed? Click here to let us know, ( contact.ntouchmusic@gmail.com ) then give us about a week.</a> -->
  <div class="row">
    <div class="col-xs-8">
      <%= form_tag subscriptions_path, method: "get" do %>
        <%= search_field_tag "search",
              params[:search],
              placeholder: "Search Artist",
              class: "form-control input-lg" %>
      <% end %>
    </div>
  </div>
</div>

<br>

<div class="container">
  <%= render 'new_subs' %>
</div>
