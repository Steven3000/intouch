  <% @available_artists.each do |artist| %>
<div class="col-xs-12 col-lg-3 isotope-item">
    <div class="panel panel-default">
      <div class="panel-body" style="height:425px; overflow:auto;">
      <%= image_tag artist.avatar.url(:medium) %>
        <dl>

          <br>

          <dd class="button12b"><%= artist.name %></dd>

      <%= form_for Subscription.new :user => current_user, :artist => artist do |f| %>
            <%= f.hidden_field :artist_id %>

               <dd><%= link_to "Click here for Artist Feed", artist_path(artist.id), :class => "btn btn-primary" %></dd>

            <%= f.submit :class => "btn btn-success" %>

          <% end %>

        </dl>
      </div>
    </div>
  </div>

<% end %>
