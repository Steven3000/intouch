<div class="container">
  <h2 class="page-header">Sign up</h2>


  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>

    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email, "Email", :class => "col-sm-offset-1 col-sm-2 control-label" %>
      <div class="col-sm-6">
      <%= f.email_field :email, autofocus: true, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password, "Password", :class => "col-sm-offset-1 col-sm-2 control-label" %>
      <div class="col-sm-6">
      <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Password Confirmation", :class => "col-sm-offset-1 col-sm-2 control-label" %>
      <div class="col-sm-6">
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-4">
        <%= f.submit "Sign up", :class => "btn btn-success btn-block" %>
      </div>
    </div>

  <% end %>

  <hr>
  Already have an account?&nbsp;<%= render "devise/shared/links" %>

</div>
