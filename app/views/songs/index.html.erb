<div class="wrapper-feed">

  <h2 class="btn-homepage">
  <%= link_to "Subscribe to New Artists", subscriptions_path %>
  </h2>

  <h3 class="txtt-center">
    <%= current_user.email %>'s Song FEED
  </h3>

  <ul class="feedxxx">
    <% @songs.each do |song| %>
      <li>
        <a href="/songs/<%= song.id %>">
          <p class="artist-feed">
            <%= song.artist.name %>
            <% if song.release_date.present? %>
              <span><%= time_ago_in_words(song.release_date) %></span>
            <% end %>
          </p>
          <table>
            <td style="padding-right:25px">
              <%= song.title %>
            <td style="padding-right:25px">
              <% if song.features.present? %>
                Feat.
              <%= song.features %>
            </td>
            </td>
            <td style="padding-right:25px">
                <% if song.album_title.present? %>
                Album: <%= song.album_title %>
              <% end %>
              <% end %>
            </td>
          </table>
        </a>
      </li>
    <% end %>
  </ul>
</div>

