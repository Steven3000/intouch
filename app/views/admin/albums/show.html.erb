<div class="container">

  <div class="page-header">
    <!-- <h1>Album #<%#= @album.id %> "<%#= @album.name %>"</h1> -->
  </div>

  <dl class="dl-horizontal">
      <dt>Artwork</dt>
     <dd><%#= image_tag "#{@album.album_artwork_url}" %></dd>

    <br>
    <br>

    <dt>Title</dt>
    <dd><%= @album.name %></dd>

    <% if @album.release_date.present? %>
        <dt>Release date</dt>
        <dd><%= @album.release_date.to_formatted_s(:db) %></dd>
    <% end %>

    <% if @album.download_link.present? %>
        <dt>Download link</dt>
        <dd><%= @album.download_link %></dd>
    <% end %>

    <% if @album.embedded_code.present? %>
        <dt>Embedded code</dt>
        <dd><%= @album.embedded_code.html_safe %></dd>
    <% end %>

    <% if @album.itunes.present? %>
        <dt>Itunes</dt>
        <dd><%= @album.itunes %></dd>
    <% end %>

    <% if @album.google.present? %>
        <dt>Google</dt>
        <dd><%= @album.google %></dd>
    <% end %>

    <% if @album.amazon.present? %>
        <dt>Amazon</dt>
        <dd><%= @album.amazon %></dd>
    <% end %>

    <% if @album.spotify.present? %>
        <dt>Spotify</dt>
        <dd><%= @album.spotify %></dd>
    <% end %>
    <dd><%= link_to "Send Announcement", announcement_admin_album_path(@album), :method => :post %></dd>
  </dl>
</div>
