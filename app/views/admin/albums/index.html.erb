<div class="container">

  <h1>Albums</h1>
  <br/>

  <p><a href="/admin/albums/new" class="btn btn-default">Add a New Album</a></p>
  <br/>

  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>View</th>
        <th>Edit</th>
        <th>Trash</th>
        <th>Artist ID</th>
        <th>Artist Name</th>
        <th>Cover</th>
        <th>Back</th>
        <th>Album Title</th>
        <th>Release date</th>
        <th>Download link</th>
        <th>Embedded code</th>
        <th>Itunes</th>
        <th>Google</th>
        <th>Amazon</th>
        <th>Spotify</th>
      </tr>
    </thead>

    <tbody>
      <% @albums.each do |album| %>
        <tr>
           <td>
           <%= link_to 'Show', admin_album_path(album.id) %>
          </td>
          <td>
          <%= link_to 'Edit', edit_admin_album_path(album.id) %>
          </td>
          <td>
            <%= link_to 'Destroy', admin_album_path(album.id), method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
          <td><%= album.artist_id %></td>
          <td><%= album.artist.name %></td>
          <td><%= image_tag album.cover.url(:medium), :style => "width:75px;" %></td>
          <td><%= image_tag album.back.url(:medium), :style => "width:75px;" %></td>
          <td><%= album.name %></td>
          <td><%= album.release_date.to_formatted_s(:db) %></td>
          <td>
            <% album.download_link %>
            <% if album.download_link.present? %>
                YES
            <% else %>
                NO
            <% end %>
          </td>
          <td>
            <% album.embedded_code %>
            <% if album.embedded_code.present? %>
                YES
            <% else %>
                NO
            <% end %>
          </td>
          <td>
            <% album.itunes %>
            <% if album.itunes.present? %>
                YES
            <% else %>
                NO
            <% end %>
          </td>
          <td>
            <% album.google %>
            <% if album.google.present? %>
                YES
            <% else %>
                NO
            <% end %>
            </td>
          <td>
            <% album.amazon %>
            <% if album.amazon.present? %>
                YES
            <% else %>
                NO
            <% end %>
          </td>
          <td>
            <% album.spotify %>
            <% if album.spotify.present? %>
               YES
            <% else %>
                NO
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate(@albums) %>
</div>
