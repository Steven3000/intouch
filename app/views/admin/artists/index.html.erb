<div class="wrapper-index">
  <div class="page-header">
    <h1>Artists</h1>
  </div>

  <p>
    <a href="/admin/artists/new" class="btn btn-default">Add a New Artist</a>
  </p>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Record label</th>
        <th>View</th>
        <th>Edit</th>
        <th>Trash</th>

      </tr>
    </thead>

    <tbody>

      <% @artists.each do |artist| %>
        <tr>
          <td><%= artist.name %></td>
          <td><%= artist.record_label %></td>
         <td>
         <%= link_to 'Show', admin_artist_path(artist.id) %>
       <!--    <a href="/admin/songs/<%= song.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a> -->
        </td>
        <td>
        <%= link_to 'Edit', edit_admin_artist_path(artist.id) %>

      <!--     <a href="/admin/songs/<%= song.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a> -->
        </td>
        <td>
          <%= link_to 'Destroy', admin_artist_path(artist.id), method: :delete, data: { confirm: 'Are you sure?' } %>
         <!--  <a href="/admin/delete_song/<%= song.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i> -->
        <!--   </a> -->
        </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate(@artists) %>
</div>
