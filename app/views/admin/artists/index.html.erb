<div class="wrapper-index">
  <div class="page-header">
    <h1>Artists</h1>
  </div>

  <p>
    <a href="/admin/artists/new" class="btn btn-default">Add a New Artist</a>
  </p>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Record label</th>
        <th>View</th>
        <th>Edit</th>
        <th>Trash</th>

      </tr>
    </thead>

    <tbody>

      <% @artists.each do |artist| %>
        <tr>
          <td><%= artist.name %></td>
          <td><%= artist.record_label %></td>
          <td>
            <a href="/admin/artists/<%= artist.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
          </td>
          <td>
            <a href="/admin/artists/<%= artist.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
          </td>
          <td>
            <!-- Commenting out your <a> tags and replacing them with link_to rails helpers. -->
          <!-- The path you had for the delete action is wrong. It's no longer /admin/delete_song -->
          <!-- It's /songs going to the Delete action becuase the HTTP method was changed to delete -->
          <!-- In the link_to the first parameter we pass is what we want to show up as the link -->
          <!-- the second parameter we pass is the route we want the link to go to -->
          <!-- the thirs parameter we pass is the HTTP method type, in this case it's delete -->
          <!-- just like a form_for -->
          <%= link_to 'Destroy', admin_artist_path(artist.id), method: :delete, data: { confirm: 'Are you sure?' } %>

            <!-- <a href="/admin/delete_artist/<%= artist.id %>" class="btn btn-danger">
              <i class="fa fa-trash-o"></i>
            </a> -->
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate(@artists) %>
</div>
