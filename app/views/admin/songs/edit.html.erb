<div class="wrapper-index">
  <div class="page-header">
    <h1>Edit Song #<%= @song.id %></h1>
  </div>

  <%= form_for(@song, url: admin_path) do |s| %>

    <%= s.label :artist_id, class: "control-label"  %>
    <%= s.collection_select(:artist_id, Artist.all, :id, :name) %>

    <br>

    <%= s.label :title, "Song Title", class: "control-label"  %>
    <%= s.text_field :title, placeholder: "Title", class: "form-control input-lg"  %>

    <%= s.label :features, class: "control-label"  %>
    <%= s.text_field :features, placeholder: "Features", class: "form-control input-lg"  %>

    <%= s.label :producer, class: "control-label"  %>
    <%= s.text_field :producer, placeholder: "Producer", class: "form-control input-lg"  %>

    <%= s.label :album, class: "control-label"  %>
    <%= s.text_field :album, placeholder: "Album", class: "form-control input-lg"  %>

    <%= s.label :release_date, class: "control-label"  %>
    <%= s.text_field :release_date, placeholder: "Release Date", class: "form-control input-lg"  %>

    <%= s.label :download_link, class: "control-label"  %>
    <%= s.text_field :download_link, placeholder: "Download_link", class: "form-control input-lg"  %>

    <%= s.label :embedded_code, class: "control-label"  %>
    <%= s.text_field :embedded_code, placeholder: "Embedded_code", class: "form-control input-lg"  %>

    <%= s.label :itunes, class: "control-label"  %>
    <%= s.text_field :itunes, placeholder: "itunes", class: "form-control input-lg"  %>

    <%= s.label :google, class: "control-label"  %>
    <%= s.text_field :google, placeholder: "google", class: "form-control input-lg"  %>

    <%= s.label :amazon, class: "control-label"  %>
    <%= s.text_field :amazon, placeholder: "amazon", class: "form-control input-lg"  %>

    <%= s.label :spotify, class: "control-label"  %>
    <%= s.text_field :spotify, placeholder: "spotify", class: "form-control input-lg"  %>
    <%= s.label :youtube, class: "control-label"  %>
    <%= s.text_field :youtube, placeholder: "Youtube", class: "form-control input-lg"  %>

    <%= s.submit class: "btn btn-default"  %>
 <% end %>
</div>
