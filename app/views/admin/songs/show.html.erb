<div class="wrapper-index">

  <div class="page-header">
    <h1>Song #<%= @song.id %> "<%= @song.title %>"</h1>
  </div>

  <dl class="dl-horizontal">
      <dt>Artwork</dt>
    <%= image_tag "#{@song.artwork_url}" %>

    <br>
    <br>

    <dt>Artist</dt>
    <dd><%= @song.artist.name %></dd>

    <dt>Title</dt>
    <dd><%= @song.title %></dd>

    <% if @song.features.present? %>
        <dt>Features</dt>
        <dd><%= @song.features %></dd>
    <% end %>

    <% if @song.producer.present? %>
        <dt>Producer</dt>
        <dd><%= @song.producer %></dd>
    <% end %>

    <% if @song.album.present? %>
        <dt>Album</dt>
        <dd><%= @song.album %></dd>
    <% end %>

    <% if @song.release_date.present? %>
        <dt>Release date</dt>
        <dd><%= @song.release_date %></dd>
    <% end %>

    <% if @song.download_link.present? %>
        <dt>Download link</dt>
        <dd><%= @song.download_link %></dd>
    <% end %>

    <% if @song.embedded_code.present? %>
        <dt>Embedded code</dt>
        <dd><%= @song.embedded_code %></dd>
    <% end %>

    <% if @song.itunes.present? %>
        <dt>Itunes</dt>
        <dd><%= @song.itunes %></dd>
    <% end %>

    <% if @song.google.present? %>
        <dt>Google</dt>
        <dd><%= @song.google %></dd>
    <% end %>

    <% if @song.amazon.present? %>
        <dt>Amazon</dt>
        <dd><%= @song.amazon %></dd>
    <% end %>

    <% if @song.spotify.present? %>
        <dt>Spotify</dt>
        <dd><%= @song.spotify %></dd>
    <% end %>

    <% if @song.youtube.present? %>
        <dt>Youtube</dt>
        <dd><%= @song.youtube %></dd>
    <% end %>

  </dl>

</div>
