<div class="wrapper-index">
<div class="page-header">
  <h1>Songs</h1>
</div>

<p><a href="/admin/songs/new" class="btn btn-default" >Add a New Song</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>View</th>
      <th>Edit</th>
      <th>Trash</th>
      <th>Artist ID</th>
      <th>Artist Name</th>
      <th>Title</th>
      <th>Features</th>
      <th>Producer</th>
      <th>Album</th>
      <th>Release date</th>
      <th>Download link</th>
      <th>Embedded code</th>
      <th>Itunes</th>
      <th>Google</th>
      <th>Amazon</th>
      <th>Spotify</th>
      <th>Youtube</th>
      <th>View</th>
      <th>Edit</th>
      <th>Trash</th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
         <td>
          <!-- Commenting out your <a> tags and replacing them with link_to rails helpers. -->
          <%= link_to 'Show', "songs/#{song.id}"%>

          <!-- <a href="/admin/songs/<%= song.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a> -->
        </td>
        <td>
          <!-- Commenting out your <a> tags and replacing them with link_to rails helpers. -->
          <%= link_to 'Edit', "songs/#{song.id}/edit"%>

          <!-- <a href="/admin/songs/<%= song.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a> -->
        </td>
        <td>
          <!-- Commenting out your <a> tags and replacing them with link_to rails helpers. -->
          <!-- The path you had for the delete action is wrong. It's no longer /admin/delete_song -->
          <!-- It's /songs going to the Delete action becuase the HTTP method was changed to delete -->
          <!-- In the link_to the first parameter we pass is what we want to show up as the link -->
          <!-- the second parameter we pass is the route we want the link to go to -->
          <!-- the thirs parameter we pass is the HTTP method type, in this case it's delete -->
          <!-- just like a form_for -->
          <%= link_to 'Destroy', "/admin/songs/#{song.id}", method: :delete, data: { confirm: 'Are you sure?' } %>

          <!-- <a href="/admin/delete_song/<%= song.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a> -->
        </td>
        <td><%= song.artist_id %></td>
        <td><%= song.artist.name %></td>
        <td><%= song.title %></td>
        <td><%= song.features %></td>
        <td><%= song.producer %></td>
        <td><%= song.album %></td>
        <td><%= song.release_date %></td>
        <td>
          <% song.download_link %>
          <% if song.download_link.present? %>
              WORD
          <% else %>
              0
          <% end %>
        </td>
        <td>
          <% song.embedded_code %>
          <% if song.embedded_code.present? %>
              4SHO
          <% else %>
              0
          <% end %>
        </td>
        <td>
          <% song.itunes %>
          <% if song.itunes.present? %>
              DOPE
          <% else %>
              0
          <% end %>
        </td>
        <td>
          <% song.google %>
          <% if song.google.present? %>
              WORD
          <% else %>
              0
          <% end %>
          </td>
        <td>
          <% song.amazon %>
          <% if song.amazon.present? %>
              4SHO
          <% else %>
              0
          <% end %>
        </td>
        <td>
          <% song.spotify %>
          <% if song.spotify.present? %>
              DOPE
          <% else %>
              0
          <% end %>
        </td>
        <td>
          <% song.youtube %>
          <% if song.youtube.present? %>
              DOPE
          <% else %>
              0
          <% end %>
        </td>
        <td>
          <a href="/admin/songs/<%= song.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/admin/songs/<%= song.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/admin/delete_song/<%= song.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate(@songs) %>
</div>
