<div class="container">
  <h1>
    <%= @artist.name %>  <span> <%= @artist.record_label %></span>
  </h1>

  <aside>
    <%= image_tag "#{@artist.picture_url}" %>
    <br>
    <br>
  </aside>

  <div class="artists-show-feed-wrapper">
    <ul class="feed">
        <% @artist.songs.each do |song| %>
          <li>
            <a href="/songs/<%= song.id %>">
              <p class="artist">
                <%= song.artist.name %>
                <% if song.release_date.present? %>
                  <span><%= time_ago_in_words(song.release_date) %></span>
                <% end %>
              </p>
              <p class="song"><%= song.title %> </p>
            </a>
          </li>
        <% end %>
      </ul>
  </div>
</div>




