<div class="container">
  <p class="button-bar">
    <%= @artist.name %>
  </p>
  <div>
    <div style="display: inline-block;"><%= image_tag @artist.avatar.url, :class => "img-responsive pic-w" %></div>
    <div style="display: inline-block;"><%= image_tag @artist.pic.url, :class => "img-responsive pic-w" %></div>
  </div>
  <br/>
  <div class="row">
    <div class="col-xs-12">
    <% @artist.albums.each do |album| %>
      <div class="col-xs-12 col-lg-3 isotope-item box-albums">
        <div class="panel panel-default">
          <div class="panel-body">
            <%= image_tag "#{album.cover.url}", :class => "img-responsive" %>
            <dl>
              <dd class='button-click-listen'><a href="/albums/<%= album.id %>">Click Here to Listen</a></dd>

              <dd class="btn-md panel-button-small">
              <a href="/artists/<%= album.artist_id %>"><%= album.artist.name %></a></dd>

              <dd class="btn-md panel-button-small">
              <%= album.name %>
              </dd>
             <% if album.release_date.present? %>
              <dd class="btn-md panel-button-small">Released <%= time_ago_in_words(album.release_date)  %> ago.</dd>
              <% end %>
          </dl>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
    <p class="button-bar"><%= link_to "Click here to Follow more Artists", subscriptions_path %></p>
</div>
