class Admin::AlbumsController < ApplicationController

  def create
    @album  = Album.new(params[:album])

    if @album.save
      @artist = @album.artist
      @albums = @artist.albums
    end
  end

end


create.js.erb

<% if @album.valid? %>

  var newAlbumOptions = "<%=j options_from_collection_for_select(@albums, 'id', 'name') %>";
  $("#song_album_id").html(newAlbumOptions);

<% else %>

  alert("Invalid album!");

<% end %>
